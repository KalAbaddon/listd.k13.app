{% extends 'partials/base.html.twig' %}

{% block content %}

{{ content }}

<div class="uk-accordion" data-uk-accordion>

    {% for checklist in page.header.checklist %}
        <table class="uk-accordion-table" style="width:100%">
            <tr>
                <td align="left" style="width:100%">
                    <h3 class="uk-accordion-title">{{ checklist.step }}</h3>
                </td>
                <td align="right">
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-sm btn-outline-success">
                            <input type="checkbox" name="options" id="option1" autocomplete="off"> DONE
                        </label>
                        
                    </div>
                </td>
            </tr>
        </table>
                    
                    {% if checklist.details != "" %}
                        <div class="uk-accordion-content">{{ checklist.details }}</div>
                    {% else %}
                        <div class="uk-accordion-content">N/A</div>
                    {% endif %}
                    
                    

    {% endfor %}

</div>

{% endblock %}